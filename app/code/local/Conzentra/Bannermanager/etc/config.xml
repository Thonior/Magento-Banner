<?xml version="1.0"?>
<config>
  <modules>
    <Conzentra_Bannermanager>
      <version>0.1.0</version>
    </Conzentra_Bannermanager>
  </modules>
  <frontend>
    <routers>
      <bannermanager>
        <use>standard</use>
          <args>
            <module>Conzentra_Bannermanager</module>
            <frontName>bannermanager</frontName>
          </args>
      </bannermanager>
    </routers>
	<layout>
      <updates>
        <bannermanager>
          <file>bannermanager.xml</file>
        </bannermanager>
      </updates>
    </layout>
  </frontend>
  <global>
    <helpers>
      <bannermanager>
        <class>Conzentra_Bannermanager_Helper</class>
      </bannermanager>
    </helpers>
	<blocks>
	  <bannermanager>
		<class>Conzentra_Bannermanager_Block</class>
	  </bannermanager>
	</blocks>
	<models>
	  <bannermanager>
		<class>Conzentra_Bannermanager_Model</class>
		<resourceModel>bannermanager_mysql4</resourceModel>
	  </bannermanager>
	  <bannermanager_mysql4>
		<class>Conzentra_Bannermanager_Model_Mysql4</class>
		<entities>
		  <banner>
			<table>banner</table>
		  </banner>
                  <banneritem>
			<table>banner_item</table>
		  </banneritem>
        </entities>
	  </bannermanager_mysql4>
	</models>
	<resources>
	  <bannermanager_setup>
		<setup>
		  <module>Conzentra_Bannermanager</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </bannermanager_setup>
	  <bannermanager_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </bannermanager_write>
	  <bannermanager_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </bannermanager_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <bannermanager>
	    <use>admin</use>
		<args>
		  <module>Conzentra_Bannermanager</module>
		  <frontName>bannermanager</frontName>
		</args>
	  </bannermanager>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <bannermanager module="bannermanager">
		<title>Bannermanager</title>
		<sort_order>100</sort_order>
		<children>
		  <banner module="bannermanager">
		    <title>Manage Banner</title>
			<sort_order>0</sort_order>
			<action>bannermanager/adminhtml_banner</action>
		  </banner>
                  <banneritem module="bannermanager">
		    <title>Manage Banneritem</title>
			<sort_order>0</sort_order>
			<action>bannermanager/adminhtml_banneritem</action>
                  </banneritem>
		</children>
	  </bannermanager>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<bannermanager translate="title" module="bannermanager">
			  <title>Bannermanager</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <banner translate="title">
			<title>Manage Banner</title>
		  </banner>
                  <banneritem translate="title">
			<title>Manage Banneritem</title>
		  </banneritem>
			  </children>
			</bannermanager>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<bannermanager>
		  <file>bannermanager.xml</file>
		</bannermanager>
	  </updates>
	</layout>
  </adminhtml>
</config> 